<%= form_for @lesson do |f|%>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :content%>
    <%= f.text_area :content, class: "form-control", rows: "15"%>
  </div>
  <%= f.submit class: "btn btn-success"%>
<% end %>
